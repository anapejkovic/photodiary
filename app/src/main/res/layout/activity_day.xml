<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCB8E3"
    tools:context=".DayActivity">


    <TextView
        android:id="@+id/textViewCurrentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCurrentImage"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/textViewCurrentDay"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="My day was..."
        app:layout_constraintTop_toBottomOf="@id/imageViewCurrentImage"
        app:layout_constraintBottom_toTopOf="@+id/textViewCurrentRating"
         />

    <ImageView
        android:id="@+id/imageViewCurrentImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewCurrentDay"
       app:layout_constraintTop_toBottomOf="@id/textViewCurrentDate"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewCurrentRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Rating"
        app:layout_constraintTop_toBottomOf="@id/textViewCurrentDay"
        app:layout_constraintBottom_toTopOf="@id/textViewCurrentLocation"
         />

    <TextView
        android:id="@+id/textViewCurrentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCurrentRating"
         />
</androidx.constraintlayout.widget.ConstraintLayout>