<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn_rating"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flowar"
    tools:context=".CreateDayActivity">

    <ImageButton
        android:id="@+id/btn_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="26dp"
        android:layout_margin="26dp"
        android:contentDescription="Add image to your day"
        android:scaleType="centerCrop"
        android:src="@drawable/image"
        android:background="@drawable/rounded_edittext_register_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_raiting"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="26dp"
        android:contentDescription="Raiting your day"
        android:background="@drawable/rounded_edittext_register_login"
        android:scaleType="centerCrop"
        android:src="@drawable/rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_location"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:contentDescription="Add location to your day"
        android:layout_marginTop="26dp"
        android:scaleType="centerCrop"
        android:src="@drawable/location"
        android:background="@drawable/rounded_edittext_register_login"
        app:layout_constraintEnd_toStartOf="@+id/btn_image"
        app:layout_constraintStart_toEndOf="@+id/btn_raiting"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dayPlainText"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="#FFFFFF"
        android:ems="10"
        android:hint="  How was your day?"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_textview"
        app:layout_constraintTop_toBottomOf="@+id/btn_location"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSaveDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_edittext_register_login"
        android:text="Save"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayPlainText" />


</androidx.constraintlayout.widget.ConstraintLayout>